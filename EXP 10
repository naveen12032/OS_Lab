#include <stdio.h>
#include <sys/ipc.h>
#include <sys/msg.h>
#include <string.h>
struct msg_buffer {
    long msg_type;
    char msg_text[100];
};
int main() {
    key_t key = ftok("msgfile", 65);              // Generate key
    int msgid = msgget(key, 0666 | IPC_CREAT);    // Create msg queue
    struct msg_buffer msg;
    msg.msg_type = 1;

    strcpy(msg.msg_text, "Hello from sender!");
    msgsnd(msgid, &msg, sizeof(msg), 0);          // Send message
    printf("Message sent.\n");
    return 0;
}
