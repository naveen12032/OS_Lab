#include <stdio.h>
struct P { int id, at, bt, ct, tat, wt, done; } p[10];
int main() {
    int n, time = 0, done = 0, i, minbt, idx;
    printf("Enter number of processes: "); scanf("%d", &n);
    for(i = 0; i < n; i++) {
        p[i].id = i; p[i].done = 0;
        printf("AT & BT of P%d: ", i);
        scanf("%d%d", &p[i].at, &p[i].bt);
    }
    while(done < n) {
        minbt = 9999; idx = -1;
        for(i = 0; i < n; i++)
            if(!p[i].done && p[i].at <= time && p[i].bt < minbt)
                minbt = p[i].bt, idx = i;
        if(idx == -1) { time++; continue; }
        time += p[idx].bt;
        p[idx].ct = time;
        p[idx].tat = p[idx].ct - p[idx].at;
        p[idx].wt = p[idx].tat - p[idx].bt;
        p[idx].done = 1; done++;
    }
    printf("\nP\tAT\tCT\tTAT\tWT\n");
    for(i = 0; i < n; i++)
        printf("P%d\t%d\t%d\t%d\t%d\n", p[i].id, p[i].at, p[i].ct, p[i].tat, p[i].wt);
    return 0;
}
