#include <stdio.h>
struct P { int id, bt, rt, wt, tat; } p[10];
int main() {
    int n, tq, time = 0, done, i;
    printf("No. of processes: "); scanf("%d", &n);
    for(i = 0; i < n; i++) {
        p[i].id = i;
        printf("BT of P%d: ", i);
        scanf("%d", &p[i].bt);
        p[i].rt = p[i].bt;
    }
    printf("Time Quantum: "); scanf("%d", &tq);
    printf("\nGantt Chart:\n");
    do {
        done = 1;
        for(i = 0; i < n; i++) {
            if(p[i].rt > 0) {
                printf("|P%d", p[i].id);
                if(p[i].rt > tq) time += tq, p[i].rt -= tq;
                else { time += p[i].rt; p[i].wt = time - p[i].bt; p[i].rt = 0; p[i].tat = time; }
                done = 0;
            }
        }
    } while(!done);
    printf("|\n\nP\tBT\tWT\tTAT\n");
    for(i = 0; i < n; i++)
        printf("P%d\t%d\t%d\t%d\n", p[i].id, p[i].bt, p[i].wt, p[i].tat);
    return 0;
}
